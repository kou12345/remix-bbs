    "@remix-run/react": "^2.3.1",
    "@remix-run/serve": "^2.3.1",
    "drizzle-orm": "^0.29.1",
    "isbot": "^3.6.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "remix-auth": "^3.6.0",
    "remix-auth-form": "^1.4.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.3.1",
    "@remix-run/eslint-config": "^2.3.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "drizzle-kit": "^0.20.6",
    "eslint": "^8.38.0",
    "tsx": "^4.6.2",
    "typescript": "^5.1.6"
